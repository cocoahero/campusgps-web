<h2>New Location</h2>

<%= form_for [@campus, @location] do |f| %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</p>
	
	<p>
		<%= f.label :latitude %><br />
		<%= f.text_field :latitude %>
	</p>
	
	<p>
		<%= f.label :longitude %><br />
		<%= f.text_field :longitude %>
	</p>
	
	<%= f.hidden_field :campus_id, :value => @campus.id %>
	
	<%= f.submit %>
	
<% end %>